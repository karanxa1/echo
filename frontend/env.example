# =============================================================================
# ECHO Frontend Environment Configuration
# =============================================================================
# Copy this file to '.env.local' and update the values below
# cp env.example .env.local

# =============================================================================
# üåê API CONFIGURATION (REQUIRED)
# =============================================================================

# Backend API URL
# Development (Docker): http://localhost:8000
# Production: https://your-api-domain.com
NEXT_PUBLIC_API_URL=http://localhost:8000

# WebSocket URL (for real-time features - optional)
# NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# =============================================================================
# üé® APPLICATION SETTINGS
# =============================================================================

# Application Name
NEXT_PUBLIC_APP_NAME=ECHO

# Application Version
NEXT_PUBLIC_APP_VERSION=1.0.0

# Application Description
NEXT_PUBLIC_APP_DESCRIPTION=Your AI-powered memory companion

# =============================================================================
# üîß DEVELOPMENT SETTINGS
# =============================================================================

# Next.js Environment
NODE_ENV=development

# Enable/Disable development features
NEXT_PUBLIC_DEBUG=true

# Show detailed error messages
NEXT_PUBLIC_SHOW_ERRORS=true

# =============================================================================
# üéµ MEDIA & UPLOAD SETTINGS
# =============================================================================

# Maximum file upload size (in MB)
NEXT_PUBLIC_MAX_FILE_SIZE=10

# Supported image formats
NEXT_PUBLIC_SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,gif,webp

# Supported audio formats
NEXT_PUBLIC_SUPPORTED_AUDIO_FORMATS=mp3,wav,m4a,ogg

# =============================================================================
# ü§ñ AI PROVIDER SETTINGS (Optional - for frontend customization)
# =============================================================================

# Default AI provider preference
NEXT_PUBLIC_DEFAULT_AI_PROVIDER=gemini

# Enable/disable specific providers in UI
NEXT_PUBLIC_ENABLE_GEMINI=true
NEXT_PUBLIC_ENABLE_GROQ=true
NEXT_PUBLIC_ENABLE_OLLAMA=true
NEXT_PUBLIC_ENABLE_HUGGINGFACE=true

# =============================================================================
# üé® UI/UX SETTINGS
# =============================================================================

# Theme settings
NEXT_PUBLIC_DEFAULT_THEME=dark

# Enable animations
NEXT_PUBLIC_ENABLE_ANIMATIONS=true

# Chat settings
NEXT_PUBLIC_CHAT_HISTORY_LIMIT=100
NEXT_PUBLIC_MESSAGE_MAX_LENGTH=2000

# =============================================================================
# üìä ANALYTICS & TRACKING (Optional)
# =============================================================================

# Google Analytics
# NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Mixpanel
# NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# Sentry (Frontend error tracking)
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# =============================================================================
# üîê SECURITY SETTINGS
# =============================================================================

# Content Security Policy
NEXT_PUBLIC_CSP_NONCE=your_csp_nonce

# API Rate limiting (requests per minute)
NEXT_PUBLIC_API_RATE_LIMIT=60

# =============================================================================
# üåç INTERNATIONALIZATION (Optional)
# =============================================================================

# Default language
NEXT_PUBLIC_DEFAULT_LOCALE=en

# Supported languages
NEXT_PUBLIC_SUPPORTED_LOCALES=en,es,fr,de,zh

# =============================================================================
# üé¨ MEDIA SETTINGS
# =============================================================================

# Enable/disable video backgrounds
NEXT_PUBLIC_ENABLE_VIDEO_BACKGROUNDS=true

# Video background URL
NEXT_PUBLIC_BACKGROUND_VIDEO_URL=/videos/tunnel-loop.mp4

# =============================================================================
# üíæ STORAGE SETTINGS
# =============================================================================

# Local storage prefix
NEXT_PUBLIC_STORAGE_PREFIX=echo_

# Session storage duration (in days)
NEXT_PUBLIC_SESSION_DURATION=7

# =============================================================================
# üîÑ REAL-TIME FEATURES (Optional)
# =============================================================================

# Enable real-time chat
NEXT_PUBLIC_ENABLE_REAL_TIME_CHAT=false

# Chat update interval (in milliseconds)
NEXT_PUBLIC_CHAT_POLL_INTERVAL=5000

# =============================================================================
# üåê SOCIAL & SHARING (Optional)
# =============================================================================

# Social media links
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/your_handle
NEXT_PUBLIC_GITHUB_URL=https://github.com/your_repo
NEXT_PUBLIC_DISCORD_URL=https://discord.gg/your_server

# =============================================================================
# üì± PWA SETTINGS (Optional)
# =============================================================================

# Enable PWA features
NEXT_PUBLIC_ENABLE_PWA=true

# App display mode (standalone, fullscreen, minimal-ui, browser)
NEXT_PUBLIC_PWA_DISPLAY=standalone

# =============================================================================
# üîß FEATURE FLAGS (Optional)
# =============================================================================

# Enable beta features
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false

# Enable experimental AI features
NEXT_PUBLIC_ENABLE_EXPERIMENTAL_AI=false

# Enable voice recording
NEXT_PUBLIC_ENABLE_VOICE_RECORDING=true

# Enable image uploads
NEXT_PUBLIC_ENABLE_IMAGE_UPLOADS=true

# Enable memory search
NEXT_PUBLIC_ENABLE_MEMORY_SEARCH=true

# =============================================================================
# üí° ENVIRONMENT-SPECIFIC EXAMPLES
# =============================================================================

# --- DEVELOPMENT ---
# NEXT_PUBLIC_API_URL=http://localhost:8000
# NODE_ENV=development
# NEXT_PUBLIC_DEBUG=true

# --- STAGING ---
# NEXT_PUBLIC_API_URL=https://api-staging.yourapp.com
# NODE_ENV=production
# NEXT_PUBLIC_DEBUG=false

# --- PRODUCTION ---
# NEXT_PUBLIC_API_URL=https://api.yourapp.com
# NODE_ENV=production
# NEXT_PUBLIC_DEBUG=false
# NEXT_PUBLIC_SHOW_ERRORS=false

# =============================================================================
# üìù QUICK SETUP GUIDE
# =============================================================================
#
# 1. MINIMUM REQUIRED:
#    - Set NEXT_PUBLIC_API_URL to your backend URL
#
# 2. DEVELOPMENT SETUP:
#    - Copy this file to .env.local
#    - Set NEXT_PUBLIC_API_URL=http://localhost:8000
#    - Keep NEXT_PUBLIC_DEBUG=true
#
# 3. PRODUCTION SETUP:
#    - Set NEXT_PUBLIC_API_URL to your production API
#    - Set NEXT_PUBLIC_DEBUG=false
#    - Set NEXT_PUBLIC_SHOW_ERRORS=false
#    - Add analytics tokens if needed
#
# ============================================================================= 